default_border none
focus_follows_mouse always
input "type:keyboard" {
    repeat_delay 400
    repeat_rate 30
    xkb_layout "br"
    xkb_model "abnt2"
    xkb_variant ",abnt2"
}
input "type:tablet_tool" {
    map_to_output "HDMI-A-1"
}
input "Logitech_G903_LS" {
    scroll_factor 1.2
    accel_profile flat
}
input "type:touchpad" {
    accel_profile adaptive
    scroll_method two_finger
    natural_scroll enabled
    tap enabled
}

exec_always {
  gsettings set org.gnome.desktop.interface gtk-theme "Adwaita"
  gsettings set org.gnome.desktop.interface icon-theme "Adwaita"
}

gaps inner 10
# STARTUP PROGRAMS
exec waybar
exec swayidle
# exec wf-panel
exec swaync &
exec xsettingsd
exec dex -a -e sway
exec_always 'pkill kanshi; kanshi'
exec /lib/polkit-gnome/polkit-gnome-authentication-agent-1
# exec dlauncher &
# exec wlr-clipboard-history -t &
exec foot --server &
# Remembers last played player
exec playerctld &

# Inhibit idle if anything is fullscreen and visible
for_window [class="^.*"] inhibit_idle fullscreen
for_window [app_id="^.*"] inhibit_idle fullscreen

# Inhibit idle if steam app is focused
for_window [class="steam_app*"] inhibit_idle focus
# Make FEH floating always
for_window [class="feh*"] floating enable

# run keyring
exec eval $(gnome-keyring-daemon --start)
exec export SSH_AUTH_SOCK

exec swayosd-server

bindsym XF86AudioRaiseVolume exec swayosd-client --output-volume raise
bindsym XF86AudioLowerVolume exec swayosd-client --output-volume lower

# Sink mute
bindsym F8 exec swayosd-client --input-volume mute-toggle

# Brightness raise
bindsym XF86MonBrightnessUp exec swayosd-client --brightness raise
bindsym XF86MonBrightnessDown exec swayosd-client --brightness lower

# Sink volume toggle mute
bindsym XF86AudioMute exec swayosd-client --output-volume mute-toggle
# Source volume toggle mute
bindsym XF86AudioMicMute exec swayosd-client --input-volume mute-toggle

include /etc/sway/config.d/*

